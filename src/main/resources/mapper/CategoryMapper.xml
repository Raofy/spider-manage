<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jin10.spidermanage.mapper.CategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jin10.spidermanage.dto.CategoryDTO">
        <id column="id" property="id"/>
        <result column="category_name" property="category"/>
        <collection property="labels"
                    ofType="com.jin10.spidermanage.dto.LabelDTO"
                    select="findLabelByCategoryId"
                    column="id">
        </collection>

    </resultMap>

    <select id="getAll" resultMap="BaseResultMap">
        select id, category_name from category;
    </select>

    <select id="findLabelByCategoryId" parameterType="_int" resultType="com.jin10.spidermanage.dto.LabelDTO">
        select id, label_name from label
        where category_id = #{id}
    </select>




</mapper>
